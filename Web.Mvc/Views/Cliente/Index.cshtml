    </div>



    <input type="hidden" id="UsuarioClienteId" value="@ViewBag.UsuarioClienteId" />

    <table id="tbCliente" class="display">
        <thead>
            <tr>
                <th>ClienteId</th>
                <th>Nome</th>
                <th>Email</th>
                <th>Celular</th>
                <th>Idade</th>
                <th></th>
            </tr>
        </thead>


        <tbody>
            @*@foreach (var cliente in Model)
                {
                    <tr>
                        <td>@cliente.ClienteId</td>
                        <td>@cliente.Nome</td>
                        <td>@cliente.Email</td>
                        <td>@cliente.Celular</td>
                        <td>@cliente.Idade</td>
                        <td>
                            <button class="btnEditar" data-clienteid="@cliente.ClienteId" onclick="openEditModal(@cliente.ClienteId)">Editar</button>
                            <button type="button" class="btnDeletar" data-clienteid="@cliente.ClienteId" onclick="DeleteCliente(@cliente.ClienteId)">Deletar</button>
