<body>
    @foreach (var cliente in Model)
    {
        <p style="color: white; font-size: 18px; font-family: monospace;">Seja bem-vindo! @cliente.Nome_Usuario</p>
    }


    <div class="signout">
        <a href="@Url.Action("Logout", "Cliente")">
