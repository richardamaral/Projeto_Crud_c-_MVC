@model List<Framework.Model.ClienteModel>

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <title>Menu do Usuário</title>
    <!-- Adicione os links para os estilos e scripts necess�rios do DataTables -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-modal/0.9.1/jquery.modal.min.css" />
